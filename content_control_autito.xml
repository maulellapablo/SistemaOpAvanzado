<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_led_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/image2"
    tools:context="com.led.controlAutito.ControlAutito"
    tools:showIn="@layout/activity_control_autito">

    <TextView
        android:text="Control Remoto RC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLC"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/black"
        android:textAllCaps="false"
        android:textAlignment="center"
        tools:background="@color/colorAccent" />

    <Button
        android:text="Adelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAD"
        android:layout_below="@+id/textViewLC"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/borde_redondo"
        android:backgroundTint="@android:color/holo_orange_light" /><![CDATA[



    android:layout_above="@+id/textClock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />






        android:layout_below="@+id/buttonAD"
        android:layout_toLeftOf="@+id/buttonADe"
        android:layout_toStartOf="@+id/buttonADe" />


        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/buttonAD"
        android:layout_toEndOf="@+id/buttonAD"
        android:layout_marginBottom="31dp" />


        android:layout_alignBaseline="@+id/buttonADe"
        android:layout_alignBottom="@+id/buttonADe"
        android:layout_toLeftOf="@+id/buttonAD"
        android:layout_toStartOf="@+id/buttonAD" />



    android:layout_above="@+id/textComando"
        android:layout_alignLeft="@+id/buttonAT"
        android:layout_alignStart="@+id/buttonAT"
        android:layout_marginBottom="36dp"
        android:layout_centerHorizontal="true" />









    ]]>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@android:color/background_light"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Esperando comandos..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textComando"
        android:layout_marginBottom="14dp"
        android:textColor="@android:color/background_light"
        android:background="@color/colorAccent"
        tools:background="@color/colorAccent"
        android:layout_above="@+id/buttonDisc"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Desconectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDisc"
        android:background="@drawable/borde_redondo"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/textClock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@android:color/holo_blue_light" />

    <Button
        android:text="Luz On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLed"
        android:background="@color/Verde"
        android:layout_above="@+id/textComando"
        android:layout_alignLeft="@+id/buttonAD"
        android:layout_alignStart="@+id/buttonAD"
        android:layout_marginBottom="21dp"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="ATRAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAT"
        android:layout_marginTop="45dp"
        android:background="@drawable/borde_redondo"
        android:layout_below="@+id/buttonAD"
        android:layout_alignLeft="@+id/buttonAD"
        android:layout_alignStart="@+id/buttonAD"
        android:backgroundTint="@android:color/holo_orange_dark" />

    <Button
        android:text="Derecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonADe"
        android:background="@drawable/borde_redondo"
        android:layout_below="@+id/buttonAD"
        android:layout_toRightOf="@+id/buttonAD"
        android:layout_toEndOf="@+id/buttonAD"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@android:color/holo_red_light" />

    <Button
        android:text="IZQUIERDA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAI"
        android:background="@drawable/borde_redondo"
        android:layout_below="@+id/buttonAD"
        android:layout_toLeftOf="@+id/buttonAD"
        android:layout_toStartOf="@+id/buttonAD"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:backgroundTint="@android:color/holo_green_light" />

    <TextView
        android:text="Velocidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_alignBottom="@+id/barraVel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp" />

    <SeekBar
        style="@android:style/Widget.Holo.SeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="255"
        android:progress="3"
        android:value="0"
        android:background="@color/colorAccent"
        android:id="@+id/barraVel"
        android:layout_above="@+id/buttonLed"
        android:layout_alignLeft="@+id/buttonAI"
        android:layout_alignStart="@+id/buttonAI"
        android:layout_marginBottom="23dp"
        android:layout_alignRight="@+id/buttonADe"
        android:layout_alignEnd="@+id/buttonADe" />

</RelativeLayout>
